{
    "snippets.userSnippetsDirectory" : "~/.local/share/nvim/snips",
    "pairs.enableCharacters": ["(", "[", "{", "'", "\""],
    "languageserver": {
        "hdlChecker": {
            "command": "hdl_checker",
            "args": [
                "--lsp"
            ],
            "filetypes": [
                "vhdl",
                "verilog",
                "systemverilog"
            ]
        }
    }
}
